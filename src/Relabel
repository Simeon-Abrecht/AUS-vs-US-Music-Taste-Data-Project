
import pandas as pd

def rename_headers(df: pd.DataFrame) -> pd.DataFrame:
    """
    Replace the first three columns of a DataFrame with ['rank', 'song_title', 'artist'].
    
    Parameters:
        df (pd.DataFrame): The input DataFrame.
    
    Returns:
        pd.DataFrame: The DataFrame with renamed headers.
    """
    # Ensure there are at least 3 columns
    if df.shape[1] < 3:
        raise ValueError("DataFrame must have at least 3 columns to rename.")
    
    # Replace the first three columns
    df.columns = ["rank", "song_title", "artist"] + list(df.columns[3:])
    
    return df